<main>
    <form class="product-form" action="/admin/{{#if editing}}edit-product{{else}}add-product{{/if}}" method="POST">
        <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="{{#if editing}}{{prod.title}}{{/if}}">
        </div>
        <div class="form-control">
            <label for="imageUrl">ImageURL</label>
            <input type="text" name="imageUrl" id="imageUrl" value="{{#if editing}}{{prod.imageUrl}}{{/if}}">
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input type="number" name="price" id="price" value="{{#if editing}}{{prod.price}}{{/if}}">
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea name="description" rows="5" id="description">{{#if editing}}{{prod.description}}{{/if}}</textarea>
        </div>
        {{#if editing}}
        <input type="hidden" name="productId" value="{{prod.id}}">
        {{/if}}
        <button class="btn" type="submit">
            {{#if editing}}
            Update Product
            {{else}}
            Add Product{{/if}}
        </button>
    </form>
</main>